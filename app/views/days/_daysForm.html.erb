
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <ul class="days">

          <div class="txt">
            <%= form_for @days do |f| %>

              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.hidden_field :name, :value => current_user.email %>

              <p><%= f.label :daysTaken, 'Number of Days:' %></p>
              <%= f.text_field :daysTaken, class: 'form-control' %>
              <br>

              <p><%= f.label :dateTaken, 'Date:' %></p>
              <%= f.date_field :dateTaken, type: 'date', class: 'form-control' %>
              <br>
              <p><%= f.label :note, 'Notes:' %></p>
              <%= f.text_area :note, class: 'form-control' %>

              <br>
              <%= f.submit "SUBMIT REQUEST", class: 'btn btn-primary btn-block'  %>

            </div>

        </ul>
    </div>
  </div>
<% end %>
